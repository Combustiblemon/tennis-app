{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "outDir": "../../dist/server",
    "module": "ES6",
    "types": ["node", "express"],
    "noEmit": false
  },
  "tsc-alias":{
    "resolveFullPaths": true
  },
  "include": ["src/**/*.ts", "global.d.ts"],
  "exclude": ["jest.config.ts", "src/**/*.spec.ts", "src/**/*.test.ts"]
}
